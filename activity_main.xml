<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/selectDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="5dp"
        android:text="날짜 선택"
        app:layout_constraintBaseline_toBaselineOf="@+id/selectDayText"
        app:layout_constraintEnd_toStartOf="@+id/selectDayText"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/selectDayText"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="63dp"
        android:ems="10"
        android:inputType="text"
        android:text="선택된 날짜: "
        app:layout_constraintBottom_toBottomOf="@+id/selectTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/selectDay"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/selectTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="5dp"
        android:text="시간 선택"
        app:layout_constraintBaseline_toBaselineOf="@+id/selectTimeText"
        app:layout_constraintEnd_toStartOf="@+id/selectTimeText"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/selectTimeText"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginTop="138dp"
        android:layout_marginEnd="33dp"
        android:ems="10"
        android:inputType="text"
        android:text="선택된 시간:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/selectTime"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>